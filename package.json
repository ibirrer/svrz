{
  "name": "svrz",
  "version": "0.0.1",
  "description": "Trying to use elm-lang to display volleyball result from http://www.svrz.ch/",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "make": "npm run elm-compile && npm run bundle && npm run assets",
    "elm-compile": "elm-make src/Razfaz.elm --yes --output build/razfaz.js",
    "watch": "watch-run -i -p 'src/*' 'npm run make'",
    "format": "./elm-format src --yes",
    "bundle": "browserify src/main.js | uglifyjs --output build/main.js",
    "assets": "copyfiles -u 1 src/*.css src/*.html build",
    "serve": "http-server build"
  },
  "author": "Iwan Birrer",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^12.0.1",
    "copyfiles": "^0.2.1",
    "http-server": "^0.8.5",
    "uglify-js": "^2.6.1",
    "watch-run": "^1.2.4"
  },
  "dependencies": {
    "jquery": "^2.1.4",
    "pouchdb": "^5.1.0",
    "svrz-scraper": "git+https://github.com/ibirrer/svrz-scraper.git"
  }
}
